<h1><a href="#/authors">Authors</a></h1>

<% authors.forEach(function(author) { %>
  <% var id = author.get("id") %>
  <div class="row well">
    <div span="span8">
      <div class="row">
        <div class="span1">
          <a href="#/author/<%= id %>">
            <img src="/assets/authors/<%= id %>.jpg">
          </a>
        </div>

        <div class="span6 offset1">
          <div class="row">
            <div class="span6">
              <a href="#/author/<%= id %>">
                <%= author.get("name") %>
              </a>
            </div>
          </div>

          <div class="row">
            <div class="span1">
              Books:
            </div>
            <div class="span4">
              <% var texts = author.get("texts") %>
              <% if(texts[0]) { %>
                <a href="#text/<%= texts[0].id %>">
                  <%= texts[0].title %>
                </a>
              <% } %>
              <% if(texts[1]) { %>
                ,
                <a href="#text/<%= texts[1].id %>">
                  <%= texts[1].title %>
                </a>
              <% } %>
              <% if(texts[3]) { %>
                ...
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }); %>
