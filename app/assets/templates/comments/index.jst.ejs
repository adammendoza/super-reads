<div class="row">
  <div class="span10">
    <div class="row">
      <div class="span10 well review-header">
        Community Comments
      </div>
    </div>


    <% if(comments) { %>
      <% comments.iterate("root", function(comment) { %>
        <% var user = comment.get("user"); %>
        <ul class="comments-list">
          <li>
            <div class="row">
              <div class="span1 offset1">
                <img src="/assets/users/<%= user.get("username") %>.jpg">
              </div>
              <div class="span6">
                <div class="row">
                  <div class="span4">
                    <a href="#/user/<%= user.get("id") %>">
                      <%= user.get("firstname") %>
                    </a>:
                    <%= comment.get("title") %>
                  </div>
                </div>
                <div class="row">
                  <div class="span6 posted-date">
                    Posted <%= comment.postedDateOffset() %>
                  </div>
                </div>
                <div class="row">
                  <div class="span6">
                    <%= comment.get("body") %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row offset1">
              <div class="span6"><hr></div>
            </div>
        <% }, function(comment) { %>
          </li>
        </ul>
      <% }); %>
    <% } %>
  </div>
</div>
