<div class="row">
  <div class="span10">
    <div class="row">
      <div class="span10 well review-header">
        Community Reviews
      </div>
    </div>

    <% if(reviews) { %>
      <% reviews.forEach(function(review) { %>
        <% var user = review.get("user"); %>
        <% var rating = review.get("rating"); %>
        <div class="row">
          <div class="span1 offset1">
            <img src="/assets/users/<%= user.get("username") %>.jpg">
          </div>
          <div class="span6">
            <div class="row">
              <div class="span4">
                <a href="#/user/<%= user.get("id") %>">
                  <%= user.get("firstname") %>
                </a>
                <% if (rating) { %>
                  rated it
                  <% for(var i = 1; i <= 5; i++) { %>
                    <span class="star"><%= (i > rating ? "☆" : "★") %></span>
                  <% } %>
                <% } else { %>
                  has not rated this book
                <% } %>
              </div>
            </div>
            <div class="row">
              <div class="span6">
                <%= review.get("body") %>
              </div>
            </div>
          </div>
        </div>
        <div class="row offset1">
          <div class="span6"><hr></div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>
