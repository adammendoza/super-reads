
<div class="row well">
  <div class="span3">
    <img src="/assets/texts/<%= text.get("id") %>.jpg">
  </div>
  <div class="span7">
    <div class="row">
      <div class="span11 text-detail">
        <a href="">
          <%= text.escape("title") %>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="span7">
        Author:
        <% text.get("authors").forEach(function(author) { %>
          <a href="#/author/<%= author.escape("id") %>">
            <%= author.escape("name") %>
          </a>
        <% }); %>
      </div>
    </div>

    <% if(GooderReads.isLoggedIn()) { %>
      <div class="row">
        <div class="span7"
          <div class="dropdown">
            <button class="btn dropdown-toggle sr-only" type="button" id="dropdownMenu1" data-toggle="dropdown">
              <%= text.stateString() %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <a href="#" data-state="queue">Want to read</a>
              </li>
              <li>
                <a href="#" data-state="read">Read</a>
              </li>
              <li>
                <a href="#" data-state="current">Currently reading</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
