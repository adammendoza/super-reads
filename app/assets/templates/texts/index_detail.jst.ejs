
<div class="row well">
  <div class="span2">
    <a href="#/text/<%= text.get("id") %>">
      <img src="/assets/texts/<%= text.get("id") %>.jpg" width="60px">
    </a>
  </div>
  <div class="span7">
    <div class="row">
      <div class="span6 text-detail">
        <a href="#/text/<%= text.get("id") %>">
          <%= text.escape("title") %>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="span6">
        Author:
        <% var i = 1; authorList = text.authorList(); %>
        <% authorList.forEach(function(author) { %>
          <a href="#/author/<%= author.id %>">
            <span><%= author.name %></span>
          </a><%= (i < authorList.length ? ", " : "") %>
          <% i++; %>
        <% }); %>
      </div>
    </div>
    <div class="row">
      <div class="span6">
        <% if(text.get("rated?")) { %>
          Avg. Rating: <%= text.get("average_rating") %>
        <% } else { %>
          Not Rated
        <% } %>
      </div>
    </div>

    <% if(GooderReads.isLoggedIn()) { %>
      <div class="row">
        <div class="span6" id="rating-<%= text.get("id") %>"></div>
      </div>

      <div class="row">
        <div class="span4">
          <div class="dropdown">
            <button class="btn dropdown-toggle sr-only" type="button" id="dropdown-menu-<%= text.get("id") %>" data-toggle="dropdown">
              <%= text.stateString() %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li>
                <a href="#" data-state="queue">Want to read</a>
              </li>
              <li>
                <a href="#" data-state="read">Read</a>
              </li>
              <li>
                <a href="#" data-state="current">Currently reading</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<div id="review-modal"></div>
